@model  GeneratorBase.MVC.Controllers.ResourceLocalization
@{
    ViewBag.Title = "Resource Localization";
    // Layout = null;
}
@using (Html.BeginForm("Create", "ResourceLocalization", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-title">
                <i class="glyphicon glyphicon-thumbs-up text-primary" style="margin-bottom:-20px;"></i> Define Lables Display Mapping  <i class="glyphicon glyphicon-chevron-right small"></i>
            </h1>
        </div>
    </div>
    @Html.HiddenFor(model => model.Name)
    <div class="col-md-12 col-sm-12 col-sx-12" style="margin-bottom:10px;">
        
        <div class="row">
            <div id="Des_Table" class="table-responsive" style="overflow-x:auto;">
                <table id="tblResourceLocalizationList" class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th class="col1">
                                Column Label Name
                            </th>
                            <th> Display Label As </th>
                        </tr>
                    </thead>


                    @for (int i = 0; i < Model.columnmapping.Count; i++)
                                {

                                <tr>
                                    <td>@Html.TextBoxFor(modelItem => Model.columnmapping[i].source, new { @readonly = "readonly", @class="form-control"})</td>

                                    <td>
                                        @Html.TextBoxFor(modelItem => Model.columnmapping[i].target, new { @class = "form-control" })
                                    </td>
                                </tr>

                                }
                </table>
            </div>
        </div>

    </div>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default btn-sm" })
    @Html.ActionLink("Reset to Default", "Reset", new { name = Model.Name }, new { @class = "btn btn-default btn-sm" })
    <input type="submit" value="Set" class="btn btn-primary btn-sm" />
}
@Scripts.Render("~/bundles/jqueryval")


