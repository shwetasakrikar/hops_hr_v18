@model GeneratorBase.MVC.Models.ImportConfiguration
@using PagedList;
@{
    ViewBag.Title = "View Import Configuration";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
            <i class="glyphicon glyphicon-hand-down text-primary"></i> Import Configuration  <i class="glyphicon glyphicon-chevron-right small"></i> <span>View</span>
        </h1>
        <h2 class="text-primary">@Html.DisplayFor(model => model.DisplayValue)</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="tabbable responsive">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#Details" data-toggle="tab">Details</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="Details">
            <div class="panel panel-default AppForm">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-xs-12">
                            <div class="panel panel-default">
                                <div class="panel-heading clearfix">
                                    <i class="icon-calendar"></i>
                                    <h3 class="panel-title">General</h3>
                                </div>
                                <div class="panel-body">
                                    @if (User.CanView("ImportConfiguration", "TableColumn"))
                                    {
                                        <div class='col-sm-6'>
                                            <div class='form-group'>
                                                <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.TableColumn) </label>
                                                <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                    <p class="viewlabel">@Model.TableColumn</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (User.CanView("ImportConfiguration", "SheetColumn"))
                                    {
                                        <div class='col-sm-6'>
                                            <div class='form-group'>
                                                <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.SheetColumn) </label>
                                                <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                    <p class="viewlabel">@Model.SheetColumn</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (User.CanView("ImportConfiguration", "UniqueColumn"))
                                    {
                                        <div class='col-sm-6'>
                                            <div class='form-group'>
                                                <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.UniqueColumn) </label>
                                                <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                    <p class="viewlabel">@Model.UniqueColumn</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (User.CanView("ImportConfiguration", "LastUpdate"))
                                    {
                                        <div class='col-sm-6'>
                                            <div class='form-group'>
                                                <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.LastUpdate)</label>
                                                <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                    <p class="viewlabel">@Model.LastUpdate.Value.ToString("MM/dd/yyyy hh:mm tt") @Model.LastUpdateUser</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (User.CanView("ImportConfiguration", "Name"))
                                    {
                                        <div class='col-sm-6'>
                                            <div class='form-group'>
                                                <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.Name) </label>
                                                <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                    <p class="viewlabel">@Model.Name</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (User.CanView("ImportConfiguration", "MappingName"))
                                    {
                                        <div class='col-sm-6'>
                                            <div class='form-group'>
                                                <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.MappingName) </label>
                                                <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                    <p class="viewlabel">@Model.MappingName</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (User.CanView("ImportConfiguration", "IsDefaultMapping"))
                                    {
                                        <div class='col-sm-6'>
                                            <div class='form-group'>
                                                <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.IsDefaultMapping) </label>
                                                <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                    <p class="viewlabel">@Model.IsDefaultMapping</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.ActionLink("Back to List", "Cancel", new { UrlReferrer = Request.UrlReferrer }, new { @class = "btn btn-default btn-sm" })
                    @if ( User.CanEdit("ImportConfiguration"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                    }
                </div>
            </div>
        </div>
    </div> <!-- /tab-content --><br />
    <br />
</div>
