@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_OrgCodes>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Org Codes.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_OrgCodes","T_OrgCode"))
{
		<th>Org Code</th>
}
@if(User.CanView("T_OrgCodes","T_CodeDescription"))
{
		<th>Code Description</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_OrgCodes","T_OrgCode"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_OrgCode)
        </td>
}
@if(User.CanView("T_OrgCodes","T_CodeDescription"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_CodeDescription)
        </td>
}
                                </tr>
                            }
</table>
               
