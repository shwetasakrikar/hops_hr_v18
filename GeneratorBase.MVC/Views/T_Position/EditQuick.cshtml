            $("#T_PositionDD").val(RecId);

			var text = $("option:selected", $("#T_PositionDD")).text();
            $("#T_PositionDD").attr('data-toggle', 'tooltip')
            $("#T_PositionDD").attr('title', text);

            var lastOptionVal = $('#T_PositionDD option:last-child').val();
