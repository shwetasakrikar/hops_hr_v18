@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_TypeOfRestrictions>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Type Of Restrictions.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_TypeOfRestrictions","T_RestrictionsID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Restrictions"?"hidden":"")>Type Of Restrictions</th>
}
@if(User.CanView("T_TypeOfRestrictions","T_EmployeeInjuryID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_EmployeeInjury"?"hidden":"")>Employees Injuries</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_TypeOfRestrictions","T_RestrictionsID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Restrictions"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_restrictions.DisplayValue)
        </td>
}
@if(User.CanView("T_TypeOfRestrictions","T_EmployeeInjuryID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_EmployeeInjury"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_employeeinjury.DisplayValue)
        </td>
}
                                </tr>
                            }
</table>
               
