@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_ClassCode>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Class Code.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_ClassCode","T_Code"))
{
		<th>Code</th>
}
@if(User.CanView("T_ClassCode","T_Title"))
{
		<th>Title</th>
}
@if(User.CanView("T_ClassCode","T_ClassEEOCodeID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_EEOCode"?"hidden":"")>EEO Code</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_ClassCode","T_Code"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Code)
        </td>
}
@if(User.CanView("T_ClassCode","T_Title"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Title)
        </td>
}
@if(User.CanView("T_ClassCode","T_ClassEEOCodeID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_EEOCode"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_classeeocode.DisplayValue)
        </td>
}
                                </tr>
                            }
</table>
               
