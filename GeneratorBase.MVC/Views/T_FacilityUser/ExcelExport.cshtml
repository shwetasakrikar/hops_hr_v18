@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_FacilityUser>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Facility User.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_FacilityUser","T_UserID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "User"?"hidden":"")>Facility Users</th>
}
@if(User.CanView("T_FacilityUser","T_FacilityID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Facility"?"hidden":"")>Facility Users</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_FacilityUser","T_UserID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "User"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_user.UserName)
        </td>
}
@if(User.CanView("T_FacilityUser","T_FacilityID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Facility"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_facility.DisplayValue)
        </td>
}
                                </tr>
                            }
</table>
               
