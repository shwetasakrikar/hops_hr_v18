@using System.Text.RegularExpressions
@{
   // Layout = "~/Views/Shared/_LayoutWebApi.cshtml";
}
<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
<link href="~/Content/TestClient.css" rel="stylesheet" />
@* Automatically grabs the installed version of JQuery/JQueryUI/KnockoutJS *@
@{var filePattern = @"(jquery-[0-9]+.[0-9]+.[0-9]+.js|jquery-ui-[0-9]+.[0-9]+.[0-9]+.js|knockout-[0-9]+.[0-9]+.[0-9]+.js)";}
@foreach (var item in Directory.GetFiles(Server.MapPath(@"~/ScriptWebApi")).Where(f => Regex.IsMatch(f, filePattern)))
{
    <script src="~/ScriptWebApi/@Path.GetFileName(item)"></script>
}
<script src="~/ScriptWebApi/WebApiTestClient.js" defer="defer"></script>