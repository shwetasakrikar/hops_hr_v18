@{
    ViewBag.Title = "Security Alert";
    Layout = null;
    var commonObj = GeneratorBase.MVC.Models.CommonFunction.Instance;
    var AppName = commonObj.AppName();
}
<div class="row">
    <div class="col-lg-12">

        <style>
            .CustomErrorHC {
                width: 100%;
                background: #62a8d1;
                position: relative;
                overflow: hidden;
                padding-top: 18px;
                margin-bottom: 18px;
                margin-top: 20px;
            }

                .CustomErrorHC h1 {
                    margin: 0 0 .6em 0;
                    font-size: 42px;
                    color: #ffffff !important;
                    line-height: 1.054545454545;
                }

                .CustomErrorHC .HeaderDiv {
                    max-width: 500px;
                    text-align: center;
                    margin: auto;
                }

            .CustomErrorDescription {
                width: 100%;
                clear: both;
                margin: 0 auto 3em;
            }

                .CustomErrorDescription p {
                    margin: 0 0 1.6em;
                    color: #404040;
                    text-align: center;
                    font-size: 20px;
                }

                .CustomErrorDescription h2 {
                    margin: 0 0 1.6em;
                    color: #404040;
                    text-align: center;
                    font-size: 22px;
                    font-weight: bold;
                }
        </style>
        <div class="CustomErrorHC">
            <div class="HeaderDiv">
                <h1>@AppName </h1>
                <h2> Application Security Alert</h2>
            </div>
        </div>

        <div class="CustomErrorDescription">
            <p>
                Activation link already used/expired.
            </p>
        </div>



       
    </div>
    <!-- /.col-lg-12 -->
</div>
