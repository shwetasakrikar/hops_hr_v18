@model GeneratorBase.MVC.Models.EmailTemplate
@{
    ViewBag.Title = "Delete Email Template";
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
            <i class="glyphicon glyphicon-hand-down text-primary"></i>Delete Email Template <i class="glyphicon glyphicon-chevron-right small"></i>
            <span style="color:red;">  Are you sure you want to delete this?</span>
        </h1>
        <h2 class="text-primary">@Html.DisplayFor(model => model.DisplayValue)</h2>
    </div>
</div>
<div class="row">
    @using (Html.BeginForm("DeleteEmailTemplateConfirmed", "EmailTemplate", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ConcurrencyKey)
        @Html.HiddenFor(model => model.Id)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.EmailContent)
            </dt>
            <dd class="clearfix">
                @Html.DisplayFor(model => model.EmailContent)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.LastUpdatedByUser)
            </dt>
            <dd class="clearfix">
                @Html.DisplayFor(model => model.LastUpdatedByUser)
            </dd>
        </dl>
        <br />
        <div class="row deletefix">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <button id="CancelQuickAdd" type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <input type="submit" value="Delete" class="btn btn-primary btn-sm" onclick="QuickAddFromIndex(event,true,'EmailTemplate','null','null',0);" />
            </div>
        </div>
    }
</div>


