@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_FacilityConfiguration>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Facility Configuration.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_FacilityConfiguration","T_Key"))
{
		<th>Key</th>
}
@if(User.CanView("T_FacilityConfiguration","T_Value"))
{
		<th>Value</th>
}
@if(User.CanView("T_FacilityConfiguration","T_TenantConfigurationAssociationID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Facility"?"hidden":"")>Tenant</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_FacilityConfiguration","T_Key"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Key)
        </td>
}
@if(User.CanView("T_FacilityConfiguration","T_Value"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Value)
        </td>
}
@if(User.CanView("T_FacilityConfiguration","T_TenantConfigurationAssociationID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Facility"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_tenantconfigurationassociation.DisplayValue)
        </td>
}
                                </tr>
                            }
</table>
               
