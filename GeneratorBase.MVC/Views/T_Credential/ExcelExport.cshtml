@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_Credential>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Credential.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_Credential","T_CredentialName"))
{
		<th>Credential Name</th>
}
@if(User.CanView("T_Credential","T_Description"))
{
		<th>Description</th>
}
@if(User.CanView("T_Credential","T_IssueAuthority"))
{
		<th>Issue Authority</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_Credential","T_CredentialName"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_CredentialName)
        </td>
}
@if(User.CanView("T_Credential","T_Description"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Description)
        </td>
}
@if(User.CanView("T_Credential","T_IssueAuthority"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_IssueAuthority)
        </td>
}
                                </tr>
                            }
</table>
               
