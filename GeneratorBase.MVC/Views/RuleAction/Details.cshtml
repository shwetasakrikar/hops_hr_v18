@model GeneratorBase.MVC.Models.RuleAction
@using PagedList;
@{
    ViewBag.Title = "View Rule Action";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
            <i class="glyphicon glyphicon-hand-down text-primary"></i> Rule Action  <i class="glyphicon glyphicon-chevron-right small"></i> <span>View</span>
        </h1>
        <h2 class="text-primary">@Html.DisplayFor(model => model.DisplayValue)</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="tabbable responsive">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#Details" data-toggle="tab">Details</a></li>
        <li @(!User.CanView("ActionArgs") || Model.associatedactiontype.TypeNo <= 1 ? "style=display:none;" : "")><a href="#ActionArguments" data-toggle="tab">Action Args</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="Details">
            <div class="panel panel-default AppForm">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-xs-12">
                            <div class="row">
                                @if (User.CanView("RuleAction", "ActionName"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.ActionName)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                <p class="viewlabel">@Model.ActionName</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (User.CanView("RuleAction", "ErrorMessage"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.ErrorMessage)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                <p class="viewlabel">@Model.ErrorMessage</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (User.CanView("RuleAction", "RuleActionID"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.RuleActionID)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                @if (@Model.RuleActionID == 0 || @Model.RuleActionID == null || @Model.ruleaction == null)
                                                {
                                                    <p class="viewlabel"></p>
                                                }
                                                else
                                                {
                                                    <p class="viewlabel">@Model.ruleaction.DisplayValue</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (User.CanView("RuleAction", "AssociatedActionTypeID"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.AssociatedActionTypeID)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                @if (@Model.AssociatedActionTypeID == 0 || @Model.AssociatedActionTypeID == null || @Model.associatedactiontype == null)
                                                {
                                                    <p class="viewlabel"></p>
                                                }
                                                else
                                                {
                                                    <p class="viewlabel">@Model.associatedactiontype.DisplayValue</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default btn-sm" })
                    @if ( User.CanEdit("RuleAction"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                    }
                </div>
            </div>
        </div>
        <div class="tab-pane fade in" id="ActionArguments">
            @if ( User.CanView("ActionArgs"))
            {
                Html.RenderAction("Index", "ActionArgs", new { HostingEntity = "RuleAction", HostingEntityID = @Model.Id, AssociatedType = "ActionArguments" });
            }
        </div>
    </div> <!-- /tab-content --><br />
</div>
