@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_TerminationReason>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Termination Reason.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_TerminationReason","T_Name"))
{
		<th>Name</th>
}
@if(User.CanView("T_TerminationReason","T_Description"))
{
		<th>Description</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_TerminationReason","T_Name"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Name)
        </td>
}
@if(User.CanView("T_TerminationReason","T_Description"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Description)
        </td>
}
                                </tr>
                            }
</table>
               
