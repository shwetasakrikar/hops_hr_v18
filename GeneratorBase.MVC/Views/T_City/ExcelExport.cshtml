@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_City>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=City.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_City","T_Name"))
{
		<th>Name</th>
}
@if(User.CanView("T_City","T_Description"))
{
		<th>Description</th>
}
@if(User.CanView("T_City","T_CityCountryID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Country"?"hidden":"")>City Country</th>
}
@if(User.CanView("T_City","T_CityStateID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_State"?"hidden":"")>City State</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_City","T_Name"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Name)
        </td>
}
@if(User.CanView("T_City","T_Description"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_Description)
        </td>
}
@if(User.CanView("T_City","T_CityCountryID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Country"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_citycountry.DisplayValue)
        </td>
}
@if(User.CanView("T_City","T_CityStateID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_State"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_citystate.DisplayValue)
        </td>
}
                                </tr>
                            }
</table>
               
