@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_Facility>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Facility.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_Facility","T_FacilityCode"))
{
		<th>Facility Code</th>
}
@if(User.CanView("T_Facility","T_WorkingHours"))
{
		<th>Working Hours</th>
}
@if(User.CanView("T_Facility","T_FacilityName"))
{
		<th>Facility Name</th>
}
@if(User.CanView("T_Facility","T_FacilityAddressID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Address"?"hidden":"")>Address</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_Facility","T_FacilityCode"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_FacilityCode)
        </td>
}
@if(User.CanView("T_Facility","T_WorkingHours"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_WorkingHours)
        </td>
}
@if(User.CanView("T_Facility","T_FacilityName"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_FacilityName)
        </td>
}
@if(User.CanView("T_Facility","T_FacilityAddressID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Address"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_facilityaddress.DisplayValue)
        </td>
}
                                </tr>
                            }
</table>
               
