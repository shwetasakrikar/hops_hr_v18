@model GeneratorBase.MVC.Models.T_Facility
@{
    ViewBag.Title = "Delete Facility";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
            <i class="glyphicon glyphicon-hand-down text-primary"></i>Delete Facility  <i class="glyphicon glyphicon-chevron-right small"></i> 
            <span style="color:red;">  Are you sure you want to delete this?</span>
        </h1>
        <h2 class="text-primary">@Html.DisplayFor(model => model.DisplayValue)</h2>
    </div>
</div>
<div class="row">
<label id="ErrMsg" class="text-primary small" style="color:red; vertical-align:middle; font-weight:100;"></label>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ConcurrencyKey)
    @Html.HiddenFor(model => model.Id)
                                  
    <dl class="dl-horizontal">
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_FacilityCode)
        </dt>
		<dd class="clearfix">
            @Html.DisplayFor(model => model.T_FacilityCode)
			@Html.HiddenFor(model => model.T_FacilityCode)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_WorkingHours)
        </dt>
		<dd class="clearfix">
            @Html.DisplayFor(model => model.T_WorkingHours)
			@Html.HiddenFor(model => model.T_WorkingHours)
        </dd>
		  <dt>		   
            @Html.DisplayNameFor(model => model.T_FacilityName)
        </dt>
		<dd class="clearfix">
            @Html.DisplayFor(model => model.T_FacilityName)
			@Html.HiddenFor(model => model.T_FacilityName)
        </dd>
		 <dt>
            @Html.DisplayNameFor(model => model.T_FacilityAddressID)
        </dt>
		<dd class="clearfix">
            @Html.DisplayFor(model => model.t_facilityaddress.DisplayValue)
			 @Html.HiddenFor(model => model.T_FacilityAddressID)
        </dd>
    </dl>
	<br/>
        <div class="row deletefix">
				<div class="col-md-12 col-sm-12 col-xs-12">
		<label class="small alert-danger" style="padding:3px; margin-top:5px; display:block;">All UnitX will be deleted associated with @Html.DisplayFor(model => model.DisplayValue)!</label>
		<label class="small alert-danger" style="padding:3px; margin-top:5px; display:block;">All Position will be deleted associated with @Html.DisplayFor(model => model.DisplayValue)!</label>
		<label class="small alert-danger" style="padding:3px; margin-top:5px; display:block;">All Employees at this Facility will be deleted associated with @Html.DisplayFor(model => model.DisplayValue)!</label>
		<label class="small alert-danger" style="padding:3px; margin-top:5px; display:block;">All Units in Facility will be deleted associated with @Html.DisplayFor(model => model.DisplayValue)!</label>
         <a class="btn btn-default btn-sm" Onclick="goBack('@Url.Action("Index","T_Facility")');">Back</a>
        @*@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default btn-sm" })*@
 
	@if ( User.CanDelete("T_Facility"))
     {
			<input type="submit" value="Delete" class="btn btn-primary btn-sm" /> 
	}
        </div>
            </div>
    }
</div>
