@model PagedList.IPagedList<GeneratorBase.MVC.Models.T_CostCenter>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = null;
    Response.ContentType = "application/vnd.ms-excel";
    Response.AddHeader("Content-Disposition", "attachment; filename=Cost Center.xls");
}
                    <table>
                            <tr>
@if(User.CanView("T_CostCenter","T_CC"))
{
		<th>CC</th>
}
@if(User.CanView("T_CostCenter","T_CCDescription"))
{
		<th>CC Description</th>
}
@if(User.CanView("T_CostCenter","T_CostProgramID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Program"?"hidden":"")>Program</th>
}
@if(User.CanView("T_CostCenter","T_CostFundID"))
{
		<th  @(Convert.ToString(ViewData["HostingEntity"]) == "T_Fund"?"hidden":"")>Fund</th>
}
    </tr>
@foreach (var item in Model) {
    <tr>
	@if(User.CanView("T_CostCenter","T_CC"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_CC)
        </td>
}
@if(User.CanView("T_CostCenter","T_CCDescription"))
{
		<td>
            @Html.DisplayFor(modelItem => item.T_CCDescription)
        </td>
}
@if(User.CanView("T_CostCenter","T_CostProgramID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Program"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_costprogram.DisplayValue)
        </td>
}
@if(User.CanView("T_CostCenter","T_CostFundID"))
{
		<td @(Convert.ToString(ViewData["HostingEntity"]) == "T_Fund"?"hidden":"")>
            @Html.DisplayFor(modelItem => item.t_costfund.DisplayValue)
        </td>
}
                                </tr>
                            }
</table>
               
