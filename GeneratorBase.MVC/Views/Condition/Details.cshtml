@model GeneratorBase.MVC.Models.Condition
@using PagedList;
@{
    ViewBag.Title = "View Condition";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-title">
            <i class="glyphicon glyphicon-hand-down text-primary"></i> Condition  <i class="glyphicon glyphicon-chevron-right small"></i> <span>View</span>
        </h1>
        <h2 class="text-primary">@Html.DisplayFor(model => model.DisplayValue)</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="tabbable responsive">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#Details" data-toggle="tab">Details</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="Details">
            <div class="panel panel-default AppForm">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-xs-12">
                            <div class="row">
                                @if (User.CanView("Condition", "PropertyName"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.PropertyName)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                <p class="viewlabel">@Model.PropertyName</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (User.CanView("Condition", "Operator"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.Operator)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                <p class="viewlabel">@Model.Operator</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (User.CanView("Condition", "Value"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.Value)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                <p class="viewlabel">@Model.Value</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (User.CanView("Condition", "LogicalConnector"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.LogicalConnector)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                <p class="viewlabel">@Model.LogicalConnector</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (User.CanView("Condition", "RuleConditionsID"))
                                {
                                    <div class='col-sm-6'>
                                        <div class='form-group'>
                                            <label class="col-sm-5 col-md-5 col-xs-12">@Html.DisplayNameFor(model => model.RuleConditionsID)</label>
                                            <div class="input-group col-sm-7 col-md-7 col-xs-12">
                                                @if (@Model.RuleConditionsID == 0 || @Model.RuleConditionsID == null || @Model.ruleconditions == null)
                                                {
                                                    <p class="viewlabel"></p>
                                                }
                                                else
                                                {
                                                    <p class="viewlabel">@Model.ruleconditions.DisplayValue</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default btn-sm" })
                    @if ( User.CanEdit("Condition"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                    }
                </div>
            </div>
        </div>
    </div> <!-- /tab-content --><br />
</div>
